{% extends "_layout" %}
{% set title = "News" %}

{% block main %}
	<div class="container">
		<h1>Моё портфолио! :)</h1>
		{% for entry in craft.entries.section('portfolio').find() %}
			<article>
				<h3><a href="{{ entry.url }}">{{ entry.title }}</a></h3>
			</article>
		{% endfor %}
	</div>
{% endblock %}
